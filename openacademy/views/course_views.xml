<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="openacademy_course_tree_view" model="ir.ui.view">
            <field name="name">openacademy.course.tree</field>
            <field name="model">openacademy.course</field>
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Courses available">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="session_ids" options="{'no_open': True, 'no_create': True}"/>
                    <field name="responsible_id"/>
                    <field name="level"/>
                    <field name="session_count"/>
                </tree>
            </field>
        </record>
        
        <record id="openacademy_course_form_view" model="ir.ui.view">
            <field name="name">openacademy.course.form</field>
            <field name="model">openacademy.course</field>
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="responsible_id"/>
                        <field name="level"/>
                        <field name="session_count"/>
                        <field name="session_ids">
                            <tree>
                                <field name="name"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="instructor_id" string="Instructor"/>
                                <field name="level" invisible="1"/>
                            </tree>
                        </field>
                    </group>
                </form>
            </field>
        </record>
        
        <record id="academy_main_action" model="ir.actions.act_window">
            <field name="name">Academy</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">openacademy.course</field>
            <field name="view_mode">kanban,form</field>
            <field name="view_type">form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to access academy.
                </p>
            </field>
        </record>
        
        <record id="courses_detail_action" model="ir.actions.act_window">
            <field name="name">Courses</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">openacademy.course</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to access courses.
                </p>
            </field>
        </record>
        
        <record id="courses_add_action" model="ir.actions.act_window">
            <field name="name">Add course</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">openacademy.course</field>
            <field name="view_mode">form,tree</field>
            <field name="view_type">form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to access courses.
                </p>
            </field>
        </record>
    </data>
</odoo>